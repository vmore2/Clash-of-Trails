{
  "expo": {
    "name": "CLASH OF TRAILS",
    "slug": "clash-of-trails",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/a097a3d5-fd2f-4bf5-acba-5d2996e89396",
      "checkAutomatically": "ON_LOAD",
      "channel": "preview"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to location for territory tracking.",
          "locationAlwaysPermission": "This app needs background location access to continue tracking your territory even when minimized.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true,
          "android": {
            "notificationIcon": "./assets/icon.png",
            "notificationColor": "#6aa2ff"
          }
        }
      ]
    ],
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We use your location to track your walk/jog while tracking is active.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need background location access to continue tracking your territory even when the app is minimized.",
        "NSLocationAlwaysUsageDescription": "We need background location access to continue tracking your territory even when the app is minimized.",
        "UIBackgroundModes": [
          "location",
          "background-processing",
          "background-fetch"
        ],
        "NSLocationTemporaryUsageDescriptionDictionary": {
          "Territory Tracking": "We need precise location to accurately track your territory conquests."
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "usesCleartextTraffic": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.WAKE_LOCK",
        "android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"
      ],
      "package": "com.vrushket.clashoftrails"
    },
    "web": {
      "favicon": "./assets/logo.png"
    },
    "extra": {
      "eas": {
        "projectId": "a097a3d5-fd2f-4bf5-acba-5d2996e89396"
      }
    }
  }
}
